files:
  "/etc/cron.d/laravel_scheduler":
    mode: "000644"
    owner: root
    group: root
    content: |
      * * * * * root /usr/local/bin/scheduler.sh

  "/usr/local/bin/scheduler.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/bin/bash
      export $(cat /opt/elasticbeanstalk/deployment/env | xargs) 
      /usr/bin/php  /var/www/html/artisan schedule:run 1>> /var/laralog.log 2>&1
      exit 0

commands:
  remove_old_cron:
    command: "rm -f /etc/cron.d/*.bak"
